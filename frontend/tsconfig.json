{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strict": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": [
      "DOM"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "src/types/*"
      ],
      "@shared": [
        "../shared/index.d.ts"
      ],
      "sharedComponents": [
        "src/sharedComponents"
      ],
      "sharedTypes": [
        "src/sharedTypes/index.ts"
      ],
      "theme": [
        "src/theme.ts"
      ],
      "utilities": [
        "src/utilities.ts"
      ],
      "context": [
        "src/Context.tsx"
      ]
    }
  }
}