{
    "compilerOptions": {
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ],
            "@shared": [
                "../shared/index.d.ts"
            ],
        },
        "module": "commonjs",
        "noImplicitAny": false, 
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "build/"
    },
    "exclude": [
        "node_modules"
    ]
}