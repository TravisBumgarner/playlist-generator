{
    "compilerOptions": {
        "resolveJsonModule": true,
        "strict": false,
        "baseUrl": ".",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "outDir": "build/"
    },
    "exclude": [
        "node_modules"
    ]
}